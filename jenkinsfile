pipeline {
    agent any
    environment{
        JAVA_HOME = 'C:/Program Files/Java/jdk-17'
    }
    stages {
        stage('Build Jar File') {
            steps {
                dir('C:\Users\Kalpana Sundar\OneDrive\Desktop\Git-jens-pod') {
                sh'''
                java -version
                chmod +x mvnw
                which java
                echo "starting to create jar file"
                ./mvnw package -DskipTests
                echo "jar file created"
                '''
                }
            }
        }
        stage('Build ContainerImage and push to jfrog ') {
            steps {
                sh 'podman build -t sample-springboot-app ./dockerfile'
                // Push the image to jfrog Artifactory 
                sh 'echo "image created " '
            }
        }
        stage('Deploy') {
            steps {
            sh 'echo "test deploy stage"'
            }
        }
    }
}
