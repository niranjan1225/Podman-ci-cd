pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'your-docker-image-name'
        MAVEN_HOME = tool 'Maven'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // Clean and build the Spring Boot application
                    sh "${env.MAVEN_HOME}/bin/mvn clean package -DskipTests"
                }
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build(env.DOCKER_IMAGE, "--build-arg JAR_FILE=target/*.jar .")
                }
            }
        }
        
        stage('Push Docker Image') {
            steps {
                script {
                    // Push Docker image to a container registry
                    docker.withRegistry('https://gitlab.com/tbt1951107/my_project/-/tree', 'cicd_project') {
                        docker.image(env.DOCKER_IMAGE).push()
                    }
                }
            }
        }
    }
}
