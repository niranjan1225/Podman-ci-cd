pipeline {
    agent any
    
    stages {
        stage('Build jar file') {
            steps {
                sh'''
                 chmod +x mvnw
                 which java
                 '''
                 sh './mvnw package -DskipTests'
                 sh 'echo "jar file created"'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    
                    sh 'podman build -t sample-sprintboot-app ./dockerfile'
                    sh 'echo"image created"'
}
            }
        }
        
        stage('deploy') {
            steps {
                sh 'echo "test deploy stage"'
            }
        }
        
        
        }
    }
}
